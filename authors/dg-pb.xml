&lt;a id="rest_code_1426fea5a864443582b87dda0734ea42-33" name="rest_code_1426fea5a864443582b87dda0734ea42-33" href="https://dg-pb.github.io/posts/pythons-try-finally/#rest_code_1426fea5a864443582b87dda0734ea42-33"&gt;&lt;/a&gt;        &lt;span class="k"&gt;try&lt;/span&gt;&lt;span class="p"&gt;:&lt;/span&gt;
&lt;a id="rest_code_1426fea5a864443582b87dda0734ea42-34" name="rest_code_1426fea5a864443582b87dda0734ea42-34" href="https://dg-pb.github.io/posts/pythons-try-finally/#rest_code_1426fea5a864443582b87dda0734ea42-34"&gt;&lt;/a&gt;            &lt;span class="mi"&gt;1&lt;/span&gt;&lt;span class="o"&gt;/&lt;/span&gt;&lt;span class="mi"&gt;0&lt;/span&gt;
